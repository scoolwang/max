<script>
  import wexp from 'wexp/index'
  export default class extends wexp.page {
    config = {
      "navigationBarTitleText": "年龄",
      "enablePullDownRefresh": false,
      "backgroundTextStyle": "dark",
      "backgroundColor": "#FAFAFA",
      "onReachBottomDistance": 50,
      "usingComponents": {
        "sex": "../components/sex",
        "void": "../components/void"
      }
    }
    data = {
      value: ''
    }
    methods = {
      inputChange (e) {
        let str = e.detail.value.split('-')
        let year = str[0] - 0
        let month = str[1] - 0
        let date = str[2] - 0
        let todyTime = new Date()
        let yearN = todyTime.getFullYear()
        let monthN = todyTime.getMonth() + 1
        let dateN = todyTime.getDate()
        let age = ''
        if (year === yearN) {
          age = 0
        } else if ( year < yearN) {
          if (month > monthN) {
            age = yearN - year - 1
          } else if (monthN === month) {
            if (date > dateN) {
              age = yearN - year - 1
            } else {
              age = yearN - year
            }
          } else {
            age = yearN - year
          }
        } else {
          wx.showToast({
            title: '出生日期错误',
            icon: 'none',
            duration: 2000
          })
          return
        }
        this.setData({
          value: age
        })
        // wx.navigateBack()
      },
      save () {
        let pages = getCurrentPages()
        let lastPage = pages[pages.length - 2]
        lastPage.setData({
          age: this.data.value
        })
        wx.navigateBack()
      }
    }
    onLoad (opt) {
      this.setData({
        value: opt.value
      })
    }
  }
</script>
