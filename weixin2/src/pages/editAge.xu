<template>
<picker class="link"  bindchange="inputChange" mode="date">
  <view class="label">年龄</view>
  <text class="text">{{value}}</text>
</picker>
<view class="button" bind:tap="save">保存</view>
</template>
<style lang="less">
  page {
    background: #fafafa;
  }
  .link {
    background: #fff;
    align-content: center;
